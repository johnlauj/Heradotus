<UserControl
    x:Class="Herodotus.Views.AddScenarioView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Herodotus.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Padding="20"
        Background="{StaticResource MainContentBackgroundBrush}"
        CornerRadius="12">
        <StackPanel>
            <!--  Заголовок окна  -->
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="Yellow"
                Text="Создание сценария"
                TextAlignment="Center" />

            <!--  Название сценария  -->
            <StackPanel
                Margin="0,0,0,20"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Название сценария:" />
                <hc:TextBox Width="400" Text="{Binding ScenarioName}" />
            </StackPanel>

            <!--  Список этапов  -->
            <Border
                Margin="200,0,200,12"
                Padding="5"
                BorderBrush="#555"
                BorderThickness="1"
                CornerRadius="6">
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="18"
                    Foreground="LightGray"
                    Text="Этапы"
                    TextAlignment="Center" />
            </Border>
            <ScrollViewer Height="250">
                <ItemsControl ItemsSource="{Binding Steps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8"
                                Padding="10"
                                Background="#2A2A2A"
                                BorderBrush="#555"
                                BorderThickness="1"
                                CornerRadius="6">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,6" Orientation="Horizontal">
                                        <TextBlock
                                            Width="100"
                                            VerticalAlignment="Center"
                                            Foreground="LightGray"
                                            Text="Заголовок:" />
                                        <hc:TextBox Width="400" Text="{Binding Header, Mode=TwoWay}" />
                                        <Button
                                            Margin="6,0,0,0"
                                            hc:IconElement.Geometry="{StaticResource RemoveGeometry}"
                                            Command="{Binding DataContext.RemoveStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,6" Orientation="Horizontal">
                                        <TextBlock
                                            Width="100"
                                            VerticalAlignment="Center"
                                            Foreground="LightGray"
                                            Text="Контент:" />
                                        <hc:TextBox Width="400" Text="{Binding Content, Mode=TwoWay}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Width="100"
                                            VerticalAlignment="Center"
                                            Foreground="LightGray"
                                            Text="Описание:" />
                                        <hc:TextBox
                                            Width="400"
                                            Height="60"
                                            AcceptsReturn="True"
                                            Text="{Binding Description, Mode=TwoWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--  Кнопка добавить этап  -->
            <Button
                Width="150"
                Margin="0,8,0,0"
                hc:IconElement.Geometry="{StaticResource AddGeometry}"
                Command="{Binding AddStepCommand}"
                Content="Добавить этап" />

            <!--  Кнопки сохранения/отмены  -->
            <StackPanel
                Margin="0,12,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="0,0,80,0"
                    hc:IconElement.Geometry="{StaticResource DeleteGeometry}"
                    Command="{Binding DeleteCommand}"
                    Content="Удалить" />
                <Button
                    Width="120"
                    Margin="0,0,8,0"
                    hc:IconElement.Geometry="{StaticResource SaveGeometry}"
                    Command="{Binding SaveCommand}"
                    Content="Сохранить" />
                <Button
                    Width="120"
                    hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                    Command="{Binding CancelCommand}"
                    Content="Отмена" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
